// pass - slice (from LRM)
// review

int main(){
	string student_name = "Sandy";
	string first_letter = slice(student_name, 0, 1);
	print_s(first_letter);
	// prints "S"

	string new_name = "M" ^ slice(student_name, 1, 5);
	print_s(new_name);
	// prints "Mandy"

	string second_new_name = "M" ^ slice(student_name, 1, 10);
	print_s(second_new_name);
	// prints "Mandy"

	bool new_names_equal = (new_name == second_new_name);
	print_s("Are the new names equal?")
	if (new_names_equal) {
	    print_s("Yes")
	} else {
	    print_s("No")
	}
	print_s("Are the new names equal? " ^ new_names_equal);
	// prints "Are the new names equal? Yes"
	
	print_s("Old name : " ^ student_name ^ " New name : " ^ new_name);
	// prints "Old name: Sandy New name: Mandy"

	return 0;
}

